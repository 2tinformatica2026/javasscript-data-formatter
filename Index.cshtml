<script type="text/javascript">
    const formatter = new Formatter('@System.Globalization.CultureInfo.CurrentUICulture.DateTimeFormat.ShortDatePattern',
                                    '@System.Globalization.CultureInfo.CurrentUICulture.NumberFormat.CurrencyDecimalSeparator');
</script>

<div class="row">
    <div class="col-4 col-md-3 col-lg-2">
        <input type="text" id="userDate" class="form-control" maxlength="20" autocomplete="off" 
        pattern="(0[1-9]|1[0,1,2])\/(0[1-9]|[12][0-9]|3[01])\/(19|20)\d{2}"
        value="@DateTime.Now">
    </div>
</div>

<input type="button" value="UserDateToUTCISOString" onclick="alert(formatter.UserDateToUTCISOString(document.getElementById('userDate').value))" />
<br />
<input type="button" value="UserDateToISO8601String" onclick="alert(formatter.UserDateToISO8601String(document.getElementById('userDate').value))" />
<br />
<input type="button" value="ServerDateToUserString" onclick="alert(formatter.ServerDateToUserString(formatter.UserDateToISO8601String(document.getElementById('userDate').value),formatter.TimeFormat.hms))" />
